<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mainImage = document.getElementById('main-display');
    const zoomResult = document.getElementById('zoom-result');

    mainImage.addEventListener('mousemove', function(e) {
        zoomResult.style.display = "block";

        const pos = getCursorPos(e);
        const x = pos.x / mainImage.width * 100;
        const y = pos.y / mainImage.height * 100;

        // Set background image and position for the zoom result box
        zoomResult.style.backgroundImage = `url('${mainImage.src}')`;
        zoomResult.style.backgroundPosition = `${x}% ${y}%`;
    });

    mainImage.addEventListener('mouseleave', function() {
        zoomResult.style.display = "none";
    });

    function getCursorPos(e) {
        const rect = mainImage.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        return { x: x, y: y };
    }
});

</script>