        // Retrieve price and discount percentage from data attributes
        const price = parseFloat(element.dataset.price);
        const discountPercentage = parseFloat(element.dataset.discountpercentage);

        // Check if values are valid numbers
        if (!isNaN(price) && !isNaN(discountPercentage)) {
            const { discountPrice, discountAmount } = percentagePrice(price, discountPercentage);

            // Format prices and update the inner text
            element.querySelector(".discounted-price").innerText = "â‚¹" + formatWithCommas(discountPrice.toFixed(0));
