<%- include('partials/header', { title: title }) %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-7Pi/otdlbbCR+LnW+F7PwFcSDJOuUJB3OxtEHbg4vSMvzvJjde4Po1v4BR9Gdc9aXNUNFVUY+SK51wWT8WF0Gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <div class="container">
        <h1>Edit user (<%= user.email %>)</h1>
        <form action="/update/<%= user._id  %>" method="post" id="add-form" enctype="multipart/form-data">
            <div id="div3" class="form-group">
                <label id="div3"  for="name">name:</label>
                <input  type="text"  class="form-control" id="Name"  name="Name" placeholder="Name" value="<%= user.Name %>" required minlength="3">
              </div>
              <div id="div3" class="form-group">
                <label id="div3"  for="name">phone:</label>
                <input  type="text"  class="form-control" id="phone"  name="phone" placeholder="phone" value="<%= user.phone %>" required minlength="3">
              </div>
            <div id="div3" class="form-group">
                <label id="div3"  for="name">email:</label>
                <input  type="text"  class="form-control" id="email"  name="email" placeholder="email" value="<%= user.email %>" required minlength="3">
              </div>
              <div id="div3" class="form-group">
               <label id="div3" for="password">Password:</label>
                <input id="div3" type="password" class="form-control" id="password" name="password" placeholder="password"value="<%= user.password %>"  required minlength="1">
              </div>
              <button type="submit" class="btn btn-success " value="update user" id="log" action="">update user</button>
        </form>
    </div>
    <%- include('partials/footer') %>